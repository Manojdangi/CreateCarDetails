<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="15dp">

<TextView
    android:id="@+id/tv_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Car Info"
    android:layout_marginBottom="10dp"
    android:gravity="center"
    android:textStyle="bold"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Car name"
        android:id="@+id/tv_carname"
        android:layout_below="@+id/tv_info"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_carname"
        android:layout_below="@id/tv_carname"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Year of production"
        android:id="@+id/tv_year"
        android:layout_below="@id/et_carname" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_year"
        android:layout_below="@id/tv_year"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Color"
        android:id="@+id/tv_color"
        android:layout_below="@id/et_year"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_color"
        android:layout_below="@id/tv_color"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Price(Â£)"
        android:id="@+id/tv_price"
        android:layout_below="@id/et_color"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_price"
        android:layout_below="@id/tv_price"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Engine Size"
        android:id="@+id/tv_enginesize"
        android:layout_below="@id/et_price"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_enginesize"
        android:layout_below="@id/tv_enginesize"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_enginesize"
        android:text="Add car"
        style="@style/btn_car"
        android:id="@+id/btn_addcar"
        android:layout_marginTop="8dp"
        android:textAllCaps="false"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_addcar"
        style="@style/scrollable_view"
        android:layout_marginTop="15dp"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/result"
           />


    </ScrollView>


</RelativeLayout>